pipeline { 
    agent any 
    stages {
        stage('WS Clean') { 
            steps { 
                cleanWs() 
            }
        }
        stage('Terraform-init-plan'){
            steps {
                sh '''echo \'executing terraform...\'
                 def tfHome = tool name: 'Terraform', type: 'com.cloudbees.jenkins.plugins.customtools.CustomTool'
                      python --version
                      terraform --version
                      echo \'executing pass init\'
                      

                      terraform plan'''

            }
        }
        stage('WS clean-end') {
            steps {
                cleanWs()
            }
        }
    }
}
