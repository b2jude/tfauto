pipeline { 
    agent any 
    stages {
        stage('WS Clean') { 
            steps { 
                cleanWs() 
            }
        }
        
        stage('Terraform-init-plan'){
            steps {
                sh "/home/jenkins/terraform --version"
                sh "/home/jenkins/terraform init /var/lib/jenkins/workspace/test-pipeline"
            }
        }
        
        stage('WS clean-end') {
            steps {
                cleanWs()
            }
        }
    }
}
