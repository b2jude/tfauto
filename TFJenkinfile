pipeline {
    agent any

    stages {
        stage('Terraform init') {
            
        stage ('Cleanup') {
            steps {
                echo 'Starting execution: Cleaning workspace..,'
                cleanWs()
         }
            steps {
                echo 'initializing..'
                sh 'terraform init'
            }
        }
        stage(' Plan') {
            steps {
                echo 'Planning..'
               sh 'terraform plan'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
        stage ('Cleanup') {
            steps {
                echo 'Ending execution: Cleaning workspace..,'
                cleanWs()
         }
    }
    
    }
}
