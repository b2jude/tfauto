pipeline {
    agent any

    stages {
        stage('Terraform init') {
            steps {
                echo 'initializing..'
                sh 'terraform init'
            }
        }
        stage(' Plan') {
            steps {
                echo 'Planning..'
               sh 'terraform plan'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}
